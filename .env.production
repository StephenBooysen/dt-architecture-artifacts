# =================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =================

# Server Configuration
PORT=5000
NODE_ENV=production

# Client Configuration  
CLIENT_PORT=3000
CLIENT_URL=https://your-domain.com

# API Configuration
REACT_APP_API_URL=https://your-domain.com/api

# Filing Provider Configuration
# Options: 'local' or 'git'
FILING_PROVIDER=git

# Git Provider Settings (only used when FILING_PROVIDER=git)
GIT_REPO_URL=https://github.com/your-org/your-production-repo.git
GIT_BRANCH=main
GIT_FETCH_INTERVAL=30000

# Security Configuration (CHANGE THESE IN PRODUCTION!)
SESSION_SECRET=your-super-secure-session-secret-here
JWT_SECRET=your-super-secure-jwt-secret-here

# Database/Storage Configuration
CONTENT_PATH=./content
TEMP_CONTENT_PATH=./temp-content

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=false

# Production Settings
GENERATE_SOURCEMAP=false
WATCH_MODE=false
HOT_RELOAD=false

# CORS Settings
CORS_ORIGIN=https://your-domain.com
# Browser extensions are automatically allowed, but you can restrict with specific patterns:
CORS_ALLOWED_ORIGINS=https://your-domain.com

# SSL/Security Settings
FORCE_HTTPS=true
SECURE_COOKIES=true

# Performance Settings
ENABLE_COMPRESSION=true
CACHE_STATIC_FILES=true