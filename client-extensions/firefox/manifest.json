{
  "manifest_version": 2,
  "name": "Design Artifacts Search",
  "version": "1.0.0",
  "description": "Search and preview design documentation from your Design Artifacts server",

  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "https://*.architectureartifacts.com/*",
    "https://refactored-chainsaw-pp7xwgw6jr29479-5000.app.github.dev/"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Architecture Artifacts Search",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "content_security_policy": "script-src 'self'; object-src 'self'"
}